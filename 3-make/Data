#include <iostream>
#include <string>

using namespace std;

class Data {
private:
    int giorno;
    int mese;
    int anno;

    bool isGiornoValido(int g, int m) {
        if (m < 1 || m > 12) return false;
        if (g < 1) return false;
        if (m == 11 || m == 4 || m == 6 || m == 9) {
            return (g <= 30);
        } else if (m == 2) {
            return (g <= 28);
        } else {
            return (g <= 31);
        }
    }

public:
    Data() {
        giorno = 1;
        mese = 1;
        anno = 1980;
    }

    Data(int g, int m, int a) {
        setAnno(a);
        setMese(m);
        setGiorno(g, m);
    }

    void setGiorno(int g, int m) {
        if (isGiornoValido(g, m)) {
            giorno = g;
        } else {
            cout << "Giorno non valido impostato valore 1" << endl;
            giorno = 1;
        }
    }

    void setMese(int m) {
        if (m >= 1 && m <= 12) {
            mese = m;
        } else {
            cout << "Mese non valido impostato valore 1" << endl;
            mese = 1;
        }
    }

    void setAnno(int a) {
        if (a >= 0 && a <= 2026) {
            anno = a;
        } else {
            cout << "Anno non valido impostato valore 2024" << endl;
            anno = 1980;
        }
    }

    void stampaData() {
        cout << "La data inserita e' " << giorno << "/" << mese << "/" << anno << endl;
    }
};

int main() {
    int g, m, a;

    cout << "Inserisci il giorno" << endl;
    cin >> g;

    cout << "Inserisci il mese" << endl;
    cin >> m;

    cout << "Inserisci l'anno" << endl;
    cin >> a;

    // Creazione dell'oggetto con i dati presi da tastiera
    Data dataUtente(g, m, a);
    
    dataUtente.stampaData();

    return 0;
}
