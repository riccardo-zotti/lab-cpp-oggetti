#include <iostream>
#include <string>

using namespace std;
 /********************************************************************************************
 *                                  Implementazione classe Rettangolo                        *
 *                                                                                           *
 *   Implementare una classe Rettangolo, che modelli la figura geometrica                    *
 *   Implementarla in maniera coerente ai seguenti requisiti:                                *
 *   - si vuole calcolare l'area e il perimetro del rettangolo                               *
 *   - si vuole stampare le informazioni del rettangolo                                      *
 *                                                                                           *
 *********************************************************************************************/

class Rettangolo {

private:
    // Campi
    float base;
    float altezza;

    // Costruttore
public:
    void setBase(float nuovaBase) {
        if(nuovaBase > 0)
        base = nuovaBase;
    }

    void setAltezza(float nuovaAltezza) {
        if(nuovaAltezza > 0)
            altezza = nuovaAltezza;
    }
    float getBase(){
        return base;
    }
    float getAltezza(){
        return altezza;

    }
    // Metodi set... e get...

    // Altri metodi
    float calcP(float altezza, float base){

    return (base+altezza)*2;

    }

    float calcA(float altezza, float base){
    return base*altezza;


    }
};

int main()
{
    // TODO testare
    Rettangolo R;
    int altezza;
    int base;
    cout<<"inserisci l'altezza del rettangolo: ";
    cin>>altezza;
    cout<<"inserisci la base del rettangolo: ";
    cin>>base;
    R.calcP(altezza, base);
    return 0;
}
